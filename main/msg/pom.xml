<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>jbundle-main-reactor</artifactId>
    <groupId>org.jbundle.main</groupId>
    <version>0.8.0-SNAPSHOT</version>
  </parent>

  <!-- NOTE: This project is only used for packaging since this bundle contains circular dependencies -->
  <artifactId>org.jbundle.main.msg</artifactId>
  <name>jbundle-main-msg</name>
  <packaging>bundle</packaging>

  <build>
    <plugins>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Export-Package>org.jbundle.main.msg.*;version=${project.version}</Export-Package>
            <Bundle-Activator>org.jbundle.main.msg.app.MessageServerActivator</Bundle-Activator>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jbundle.main</groupId>
      <artifactId>org.jbundle.main.db</artifactId>
      <version>0.8.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.main</groupId>
      <version>0.8.0-SNAPSHOT</version>
      <artifactId>org.jbundle.main.misc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base</groupId>
      <version>0.8.0-SNAPSHOT</version>
      <artifactId>org.jbundle.base.remote</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base</groupId>
      <version>0.8.0-SNAPSHOT</version>
      <artifactId>org.jbundle.base.other</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base.screen</groupId>
      <version>0.8.0-SNAPSHOT</version>
      <artifactId>org.jbundle.base.screen.misc</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jbundle.util.wsdl</groupId>
      <artifactId>org.jbundle.util.wsdl.xmlschema</artifactId>
      <version>${jbundleUtilWsdlVersionRange}</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.util.wsdl</groupId>
      <artifactId>org.jbundle.util.wsdl.wsdl11</artifactId>
      <version>${jbundleUtilWsdlVersionRange}</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.util.wsdl</groupId>
      <artifactId>org.jbundle.util.wsdl.wsdl20</artifactId>
      <version>${jbundleUtilWsdlVersionRange}</version>
    </dependency>

    <dependency>
	  <groupId>org.jbundle.config.dep</groupId>
	  <artifactId>jbundle-config-dep-thin-base</artifactId>
	  <version>0.8.0-SNAPSHOT</version>
	  <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope> <!-- This better be provided -->
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

</project>

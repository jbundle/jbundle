<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>jbundle-thin-base-reactor</artifactId>
    <groupId>org.jbundle.thin.base</groupId>
    <version>0.7.7-SNAPSHOT</version>
  </parent>

  <!-- NOTE: This project is only used for packaging since this bundle contains circular dependencies -->
  <artifactId>org.jbundle.thin.base.thread</artifactId>
  <name>jbundle-thin-base-thread</name>
  <packaging>bundle</packaging>

  <build>
    <plugins>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Export-Package>
            org.jbundle.thin.base.thread.*;version=${project.version},
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jbundle</groupId>
      <artifactId>org.jbundle.model</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.jbundle.thin.base</groupId>
      <artifactId>jbundle-thin-base-mixed</artifactId>
      <version>0.7.7-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

</project>

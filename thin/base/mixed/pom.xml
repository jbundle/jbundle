  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>jbundle-thin-base-reactor</artifactId>
    <groupId>org.jbundle.thin.base</groupId>
    <version>0.7.7-SNAPSHOT</version>
  </parent>
  <groupId>org.jbundle.thin.base</groupId>

  <artifactId>org.jbundle.thin.base.mixed</artifactId>
  <packaging>jar</packaging>	<!-- This is NOT an OSGi bundle -->
  <name>jbundle-thin-base-mixed - Thin framework base code</name>

  <build>
   <resources>
     <resource>
       <directory>${basedir}/src/main/resources</directory>
       <includes>
       <include>**/*.properties</include>
       </includes>
       <filtering>true</filtering>
     </resource>
   </resources>
  </build>

  <dependencies>
    
    <dependency>
      <groupId>org.jbundle</groupId>
      <artifactId>org.jbundle.model</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.jbundle.util.jcalendarbutton</groupId>
      <artifactId>org.jbundle.util.jcalendarbutton</artifactId>
      <version>${jbundle-jcalendarbuttonVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.util</groupId>
      <artifactId>org.jbundle.util.muffinmanager</artifactId>
      <version>${jbundle-util-muffinmanagerVersion}</version>
    </dependency>

    <dependency>
      <groupId>org.jbundle.thin.base.db</groupId>
      <artifactId>org.jbundle.thin.base.db</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.thin.base</groupId>
      <artifactId>org.jbundle.thin.base.message</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.thin.base</groupId>
      <artifactId>org.jbundle.thin.base.util.base64</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>

	<!-- This is safe because the webstart plugin is always here in the sdk - The runtime code always checks  -->
    <dependency>
      <groupId>com.sun</groupId>
      <artifactId>plugin</artifactId>
      <version>${pluginVersion}</version>
      <scope>system</scope>
      <systemPath>${java.home}/lib/plugin.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>javax.jnlp</groupId>
      <artifactId>javaws</artifactId>
      <version>${javawsVersion}</version>
      <scope>system</scope>
      <systemPath>${java.home}/lib/javaws.jar</systemPath>
    </dependency>
    
    <dependency>
      <groupId>org.jbundle.util.osgi</groupId>
      <artifactId>org.jbundle.util.osgi</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>

  </dependencies>


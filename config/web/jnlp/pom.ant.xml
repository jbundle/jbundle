      <!-- HACK - Yikes, I unpack the pack200 resources into a directory so build.xml can use it -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>create-pack200-resources</id> <!--  Copy dojo resources before packaging starts. -->
            <phase>process-resources</phase>
            <goals>
                <goal>unpack</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactItems>
            <artifactItem>
                 <groupId>org.codehaus.mojo.webstart</groupId>
                 <artifactId>webstart-pack200-anttasks</artifactId>
                 <version>1.1</version>
                 <type>jar</type>
              <outputDirectory>${project.build.directory}/pack200</outputDirectory>
            </artifactItem>
          </artifactItems>
      </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-resources</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <property name="version" value="${project.version}"/>
                <property name="artifactId" value="${project.artifactId}"/>
                <property name="jcalendarbutton.version" value="${jbundle-jcalendarbutton-version}"/>
                <property name="maven.plugin.classpath" refid="maven.plugin.classpath"/>	<!-- NOTE: If there was a working pack200 plugin, I could reference it here -->
                <property name="pack200classpath" value="${project.build.directory}/pack200"/>	<!-- HACK -->

                <ant antfile="${basedir}/build.xml">
                  <target name="pack"/>
                </ant>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
    </plugins>
           
  </build>


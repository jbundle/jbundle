<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>jbundle-config-web-reactor</artifactId>
    <groupId>org.jbundle.config.web</groupId>
    <version>0.7.7-SNAPSHOT</version>
  </parent>

  <artifactId>org.jbundle.config.web.bundle</artifactId>
  <packaging>bundle</packaging>
  <name>jbundle-config-web-bundle - OSGi Bundle</name>
  
  <properties>
    <java.security.policy>policy/policy.all</java.security.policy>
  </properties>

 <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${maven-bundle-pluginVersion}</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Activator>org.jbundle.bundle.impl.Activator</Bundle-Activator>
            <Export-Package>org.jbundle.bundle.*;version=${project.version}</Export-Package>
            <Private-Package>org.jbundle.bundle.impl</Private-Package>
            <Import-Package>
                ${jbundle.package};resolution:=optional,
                org.osgi.framework;resolution:=optional,	<!-- I Don't explicitly reference this, but I check to see if this exists to enable OSGi -->
            </Import-Package>
            <Bundle-Activator>org.jbundle.thin.base.util.osgi.bootstrap.ClassServiceBootstrap</Bundle-Activator>
            <Include-Resource>org.jbundle.thin.base.util.osgi.bootstrap</Include-Resource>
          </instructions>
        </configuration>
      </plugin>

	<plugin>	<!-- Use this with the clean goal to fix the local repository.xml file -->
	  <groupId>org.apache.felix</groupId>
	  <artifactId>maven-obr-plugin</artifactId>
	  <version>1.2.0</version>
	  <executions>
	    <execution>
	      <goals>
	        <goal>clean</goal>
	      </goals>
	    </execution>
	  </executions>
	</plugin>

     </plugins>
  </build>

  <dependencies>
             
    <dependency>
      <groupId>org.jbundle.res</groupId>
      <artifactId>org.jbundle.res</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>
    <dependency>
	    <groupId>org.jbundle.config.dep</groupId>
	    <artifactId>jbundle-config-dep-all</artifactId> <!-- -base? all for now -->
	    <version>0.7.7-SNAPSHOT</version>
	    <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <version>${org.osgi.coreVersion}</version>
      <scope>provided</scope> <!-- This better be provided -->
    </dependency>
    
    <dependency>
      <groupId>org.jbundle.thin.base</groupId>
      <artifactId>org.jbundle.thin.base.util.osgi</artifactId>
      <version>0.7.7-SNAPSHOT</version>
    </dependency>
  </dependencies>
</project>

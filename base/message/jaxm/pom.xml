<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jbundle.base.message</groupId>
    <artifactId>jbundle-base-message-reactor</artifactId>
    <version>0.7.9-SNAPSHOT</version>
  </parent>

  <artifactId>org.jbundle.base.message.jaxm</artifactId>
  <name>jbundle-base-message-jaxm</name>
  <packaging>bundle</packaging>

  <build>
    <plugins>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Export-Package>
            org.jbundle.base.message.trx.transport.jaxm.*;version=${project.version},
            </Export-Package>
            <Private-Package>
            javax.xml.messaging.*;
            com.sun.messaging.*;
            </Private-Package>
            <Import-Package>
            	*;resolution:=optional,
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jbundle.base.message</groupId>
      <artifactId>org.jbundle.base.message.core</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base.message</groupId>
      <artifactId>org.jbundle.base.message.misc</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base.screen</groupId>
      <artifactId>org.jbundle.base.screen.control.servlet</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base.screen</groupId>
      <artifactId>org.jbundle.base.screen.misc</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base</groupId>
      <artifactId>org.jbundle.base.util</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.base</groupId>
      <artifactId>org.jbundle.base.other</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jbundle.main</groupId>
      <artifactId>org.jbundle.main.msg</artifactId>
      <version>0.7.9-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.messaging.mq</groupId>
      <artifactId>jaxm-api</artifactId>    <!-- This is in the java.net repository -->
      <!-- NOTE: This is not provided, because it is not in the glassfish dist (it is, but it isn't on the classpath) -->
      <!-- scope>system</scope -->
      <!-- systemPath>/usr/local/java/web/glassfish/mq/lib/jaxm-api.jar</systemPath -->
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <!-- All the j2ee stuff is not in the central repository -->
  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Repository for Maven</name>
      <url>http://download.java.net/maven/2</url>
      <layout>default</layout>
    </repository>
  </repositories>

</project>
